@using static GSCrm.CommonConsts
@inject ResManager resManager
@model EmployeeViewModel

<div id="contactsFilter">
    <div class="accordion" id="contactsAccordin">
        <div class="card">
            <div class="card-header" id="headingContacts">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseContacts" aria-expanded="true" aria-controls="collapseContacts">
                        @resManager.GetString("ContactsFilter")
                    </button>
                </h5>
            </div>

            <div id="collapseContacts" class="collapse" aria-labelledby="headingContacts" data-parent="#contactsAccordin">
                <form class="card-body" method="post" asp-controller="@EMPLOYEE" asp-action="SearchContact">
                    <input asp-for="Id" hidden="hidden" />
                    <input asp-for="DivisionId" hidden="hidden" />
                    <div class="row justify-content-around form-group mb-0 mt-1">
                        <div class="col-lg mb-4 mb-lg-0 dropdown-area text-center">
                            <input asp-for="SearchContactType" class="current-dropdown-value" hidden="hidden" />
                            <span class="dropdown-el">
                                <input type="radio" name="contactType" value="None" id="searchContactTypeNone">
                                <label for="searchContactTypeNone">@resManager.GetString("None")</label>
                                <input type="radio" name="contactType" value="Personal" id="searchContactTypePersonal">
                                <label for="searchContactTypePersonal">@resManager.GetString("Personal")</label>
                                <input type="radio" name="contactType" value="Work" id="searchContactTypeWork">
                                <label for="searchContactTypeWork">@resManager.GetString("Work")</label>
                            </span>
                        </div>
                        <div class="col-lg mb-4 mb-lg-0">
                            <input asp-for="SearchContactPhone" class="form-control" placeholder="@resManager.GetString("PhoneNumber")" />
                        </div>
                        <div class="col-lg mb-4 mb-lg-0">
                            <input asp-for="SearchContactEmail" class="form-control" placeholder="@resManager.GetString("Email")" />
                        </div>
                        <div class="col-auto mb-3 mb-sm-0 text-center flex-grow-0">
                            <input type="submit" class="btn btn-outline-primary" value="@resManager.GetString("ApplyFilter")" />
                        </div>
                        <div class="col-auto text-center flex-grow-0">
                            <a asp-controller="@EMPLOYEE" asp-action="ClearContactSearch" type="button" class="btn btn-outline-primary">@resManager.GetString("Clear")</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>