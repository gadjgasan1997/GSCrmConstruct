@inject ResManager resManager
@model AccountViewModel
@using static GSCrm.CommonConsts

<div id="accInvoiceUpdateModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@resManager.GetString("InvoiceUpdate")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="@ACC_INVOICE" asp-action="Update">
                    <div class="mt-3">
                        <input id="updateAccInvoiceBankName" class="form-control" type="text" placeholder="@resManager.GetString("BankName")" />
                        <ul id="updateAccInvoiceBankNameError" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                    <div class="mt-3">
                        <input id="updateAccInvoiceCity" class="form-control" type="text" placeholder="@resManager.GetString("BankCity")" />
                        <ul id="updateAccInvoiceCityError" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                    <div class="mt-3">
                        <input id="updateAccInvoiceChecking" class="form-control" type="text" placeholder="@resManager.GetString("CheckingAccount")" />
                        <ul id="updateAccInvoiceCheckingError" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                    <div class="mt-3">
                        <input id="updateAccInvoiceCorrespondent" class="form-control" type="text" placeholder="@resManager.GetString("CorrespondentAccount")" />
                        <ul id="updateAccInvoiceCorrespondentError" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                    <div class="mt-3">
                        <input id="updateAccInvoiceBIC" class="form-control form-control-number" type="number" placeholder="@resManager.GetString("BIC")" />
                        <ul id="updateAccInvoiceBICError" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                    <div class="mt-3">
                        <input id="updateAccInvoiceSWIFT" class="form-control" type="text" placeholder="@resManager.GetString("SWIFT")" />
                        <ul id="updateAccInvoiceSWIFTError" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input id="updateAccInvoiceBtn" type="submit" class="btn btn-primary" value="@resManager.GetString("UpdateLabel")" />
                <input id="cancelUpdateAccInvoiceBtn" type="button" class="btn btn-secondary" data-dismiss="modal" value="@resManager.GetString("CancelLabel")" />
            </div>
        </div>
    </div>
</div>