@inject ResManager resManager
@using static GSCrm.CommonConsts
@model OrganizationViewModel
@* // Модальное окно создания подразделения *@
<div id="divisionModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@resManager.GetString(DIVISION)</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Division" asp-action="Create">
                    <div class="form-group">
                        <div class="mt-3">
                            <input id="divName" class="form-control" type="text" placeholder="@resManager.GetString("NameLabel")" />
                            <ul id="divNameError" class="d-none under-field-error label-sm mt-2"></ul>
                        </div>
                        <div>
                            <div class="row mt-3">
                                <div class="col-sm-auto">
                                    <p class="form-control-plaintext text-center">@resManager.GetString("ParentDivNameLabel")</p>
                                </div>
                                <div class="col text-center">
                                    <div id="parentDiv" class="autocomplete default-autocomplete" data-autocomplite-type="divisions">
                                        <a class="autocomplete-link" hidden="hidden" href="@Url.Content($"~/{DIVISION}/GetDivisions/{Model.Id}/")"></a>
                                        <input class="autocomplete-input form-control" placeholder="@resManager.GetString(DIVISION)" />
                                        <ul class="autocomplete-result-list"></ul>
                                    </div>
                                </div>
                            </div>
                            <ul id="parentDivError" class="d-none under-field-error label-sm mt-2"></ul>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input id="createDivBtn" type="submit" class="btn btn-primary" value="@resManager.GetString("CreateLabel")" />
                <input id="cancelCreationDivBtn" type="button" class="btn btn-secondary" data-dismiss="modal" value="@resManager.GetString("CancelLabel")" />
            </div>
        </div>
    </div>
</div>