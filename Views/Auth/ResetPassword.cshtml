@{
    Layout = "_AuthLayout";
}
@inject GSCrm.Localization.ResManager resManager
@model GSCrm.Models.ViewModels.UserModel
<div class="container container-md">
    <div class="form-shadow d-none"></div>
    <form method="post" asp-controller="Auth" asp-action="ResetPassword">
        <div asp-validation-summary="All"></div>
        <div class="form-group mt-5 mb-5">
            <p class="label-md label-non-select">@resManager.GetString("Username")</p>
            <input asp-for="UserName" type="text" class="form-control" placeholder="@resManager.GetString("Username")">
            <span class="mt-2" asp-validation-for="UserName"></span>
            <p class="label-md label-non-select mt-3">@resManager.GetString("OldPassword")</p>
            <input asp-for="OldPassword" type="password" class="form-control" placeholder="@resManager.GetString("OldPassword")">
            <span class="mt-2" asp-validation-for="OldPassword"></span>
            <p class="label-md label-non-select mt-3">@resManager.GetString("NewPassword")</p>
            <input asp-for="Password" type="password" class="form-control" placeholder="@resManager.GetString("NewPassword")">
            <span class="mt-2" asp-validation-for="Password"></span>
            <p class="label-md label-non-select mt-3">@resManager.GetString("ConfirmPassword")</p>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@resManager.GetString("ConfirmPassword")">
            <span class="mt-2" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <input id="resetPassword" type="submit" class="btn btn-dark signup-btn" value="@resManager.GetString("ResetPassword")" />
        </div>
    </form>
</div>